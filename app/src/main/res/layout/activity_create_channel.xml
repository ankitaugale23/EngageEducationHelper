<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Faculty.CreateChannel">

   <EditText
       android:id="@+id/enterChannelName"
       android:layout_width="match_parent"
       android:hint="Enter Channel Name"
       android:inputType="textCapWords"
       android:padding="15dp"
       android:layout_height="wrap_content"
       android:background="@drawable/textview_border"
       android:layout_margin="10dp"
       />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addSectorBtn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="15dp"
        android:onClick="addSectorBtn"
        android:text="Create Channel"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:background="@drawable/button_primary_green"
        android:layout_marginVertical="10dp"

        />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_bg"
        android:layout_margin="10dp"
        />

</LinearLayout>