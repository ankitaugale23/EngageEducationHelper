<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="15dp"
    tools:context=".Student.JoinChannelStudent">

    <EditText
        android:id="@+id/et_facultyNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="10"
        android:hint="Enter Faculty Number"
        android:inputType="numberDecimal"
        android:background="@drawable/textview_border"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/et_channelCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Channel Code"
        android:inputType="numberDecimal"
        android:background="@drawable/textview_border"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:onClick="onJoinChannel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Join Channel"
        android:background="@drawable/button_primary_green"
        android:textColor="@color/white"

        />
</LinearLayout>