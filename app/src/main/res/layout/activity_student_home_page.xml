<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="15dp"
    tools:context=".Student.StudentHomePage">

    <ImageView
        android:id="@+id/student_homepage_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/student_homepage"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:text="Show Announcements"
        android:textColor="@color/white"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        android:background="@drawable/button_primary_green"
        android:onClick="onShowAnnouncements"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:onClick="onJoinChannel"
        android:text="Join Channel"
        android:background="@drawable/button_primary_green"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:layout_marginVertical="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:onClick="onShowChannels"
        android:text="Show Channels"
        android:background="@drawable/button_primary_green"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:layout_marginVertical="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="logout"
        android:background="@drawable/rounded_corner_secondary_grey"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:layout_marginVertical="10dp"
        android:onClick="onLogOut"
        />

</LinearLayout>