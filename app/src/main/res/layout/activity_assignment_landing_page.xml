<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".Faculty.AssignmentLandingPage"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_border"
        android:gravity="center"
        android:text="Assignments"
        android:textSize="30dp"
        android:textStyle="bold"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/rectangle_bg"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="200dp"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="onCreateAssignment"
            android:text="Create Assignment"
            android:background="@drawable/button_primary_green"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="onShowAssignmentList"
            android:text="Show Assignments"
            android:background="@drawable/button_primary_green"
            android:textColor="@color/white"
            />

    </LinearLayout>

</LinearLayout>